#!/bin/bash

# Backup the original hosts file
cp /etc/hosts /etc/hosts.bak

# Replace localhost 127.0.0.1 entry with 127.0.0.2
# and add a line to map facebook.com to 8.8.8.8
sed -i 's/^127\.0\.0\.1\s\+localhost/127.0.0.2 localhost/' /etc/hosts

# If the facebook.com entry already exists, remove it
sed -i '/facebook\.com/d' /etc/hosts

# Add facebook.com redirection
echo "8.8.8.8 facebook.com" >> /etc/hosts

echo "Modification complete. localhost now resolves to 127.0.0.2 and facebook.com to 8.8.8.8"

